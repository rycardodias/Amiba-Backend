-- FUNCTION: public.tr_fc_eggsbatches_update()

-- DROP FUNCTION public.tr_fc_eggsbatches_update();

CREATE FUNCTION public.tr_fc_eggsbatches_update()
    RETURNS trigger
    LANGUAGE 'plpgsql'
    COST 100
    VOLATILE NOT LEAKPROOF
AS $BODY$
DECLARE
	v_unit varchar(50);
BEGIN
	IF (NEW."quantity" <0) THEN
		RAISE EXCEPTION 'EggsBatches.quantity cannot be lower than 0';
	END IF;
	IF (NEW."quantityAvailable" <0) THEN
		RAISE EXCEPTION 'EggsBatches.quantityAvailable cannot be lower than 0';
	END IF;
	 
	IF(OLD."id"<>NEW."id") THEN
		RAISE EXCEPTION 'EggsBatches.id cannot be changed';
	END IF;
	IF(OLD."createdAt"<>NEW."createdAt") THEN
		RAISE EXCEPTION 'EggsBatches.createdAt cannot be changed';
	END IF;
	IF(OLD."RaceId"<>NEW."RaceId") THEN
		RAISE EXCEPTION 'EggsBatches.RaceId cannot be changed';
	END IF;
	IF(OLD."caliber"<>NEW."caliber") THEN
		RAISE EXCEPTION 'EggsBatches.caliber cannot be changed';
	END IF;
	RETURN NEW;
END;
$BODY$;

ALTER FUNCTION public.tr_fc_eggsbatches_update()
    OWNER TO postgres;
