-- FUNCTION: public.tr_fc_eggsbatchexplorations_create()

-- DROP FUNCTION public.tr_fc_eggsbatchexplorations_create();

CREATE OR REPLACE FUNCTION public.tr_fc_eggsbatchexplorations_create()
    RETURNS trigger
    LANGUAGE 'plpgsql'
    COST 100
    VOLATILE NOT LEAKPROOF
AS $BODY$
DECLARE
	v_quantity integer default 0;
	v_quantityAvailable integer default 0;
BEGIN
	SELECT COALESCE("quantity", 0), COALESCE("quantityAvailable", 0)
	  INTO v_quantity, v_quantityAvailable
	  FROM public."EggsBatches"
	 WHERE "id" = NEW."EggsBatchId"; 
	 
	UPDATE public."EggsBatches"
	   SET "quantity" = v_quantity + NEW."quantity",
	       "quantityAvailable" = v_quantityAvailable + NEW."quantity"
	 WHERE "id" = NEW."EggsBatchId";
	
	RETURN NEW;
END;
$BODY$;

ALTER FUNCTION public.tr_fc_eggsbatchexplorations_create()
    OWNER TO postgres;
